<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hentati.nejmeddine.saisieexamens.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorIcons"
        >
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/cin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Votre CIN"
        android:layout_marginTop="50dp"
        android:textCursorDrawable="@color/colorAccent"
        android:inputType="number"
        android:maxLength="8"
        app:met_checkCharactersCountAtBeginning="false"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="8"
        app:met_minCharacters="8"
        app:met_errorColor="@color/colorError"
        app:met_primaryColor="@color/colorAccent"
        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/continuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cin"
        android:background="@color/colorSecondaryText"
        android:text="Continuer"
        android:textColor="@color/colorPrimaryLight"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:enabled="false"
        />


    </RelativeLayout>

    <TextView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chargement..."
        android:gravity="center"
        android:background="@color/colorAccent"
        android:textSize="15sp"
        />

</RelativeLayout>
